<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="?attr/cardbackground"
        app:cardUseCompatPadding="true" android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" android:id="@+id/view_color_status"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/sala"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:maxLength="9"
                    android:text="PA2 - 106    " android:gravity="top|center"
                    android:textStyle="bold" android:background="@drawable/bg_class_number"
                    android:padding="4dp" android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp" android:layout_marginTop="12dp"
                    android:textColor="?attr/class_text_color"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="match_parent"
                        android:textColor="?attr/textcolor"
                        android:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content" android:id="@+id/des_timer_start"
                        android:layout_weight="1" android:textSize="13dp" android:gravity="bottom|center"
                        android:text="Início"/>
                <TextView
                        android:text="10h:00"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_timer_start"
                        android:layout_weight="1" android:gravity="bottom|center" android:layout_marginBottom="4dp"
                        android:textStyle="bold" android:textColor="?attr/item_disciplineTitle"/>
            </LinearLayout>
        </LinearLayout>

        <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="?attr/divider_item_color" android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/linearLayout2"
                        tools:layout_editor_absoluteX="8dp"
                        tools:ignore="MissingConstraints" android:layout_marginTop="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayout" android:layout_marginBottom="8dp"
                        android:layout_marginStart="8dp">
                    <TextView
                            android:id="@+id/title"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:fontFamily="@font/montserrat"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            tools:text="GCET000 - Calculo Integral e Difrencial I "
                            android:textStyle="bold" android:layout_marginTop="4dp" android:maxLength="130"
                            android:layout_marginEnd="16dp" android:textColor="?attr/item_disciplineTitle"/>
                    <TextView
                            android:id="@+id/desc"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:maxLength="32"
                            android:textColor="?attr/textcolor"
                            android:fontFamily="@font/montserrat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/title"
                            tools:text="Eterfano Alexsander do Calabá da Monta" android:layout_marginEnd="16dp"/>
                </LinearLayout>


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="27dp"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteY="49dp" android:id="@+id/linearLayout">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1"
                            android:layout_marginBottom="4dp">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:gravity="center" android:layout_weight="1"
                                android:layout_marginStart="8dp">
                            <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/ic_timer_black_24dp"
                                    tools:ignore="VectorDrawableCompat"/>
                            <TextView
                                    android:text="Duração"
                                    android:textColor="?attr/textcolor"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" android:layout_marginStart="4dp" android:textSize="13dp"/>
                        </LinearLayout>
                        <TextView
                                android:text="2h:00"
                                android:textColor="?attr/textcolor"
                                android:fontFamily="@font/montserrat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/txt_duration"
                                android:layout_weight="1" android:layout_marginStart="8dp" android:paddingStart="4dp"
                                android:textStyle="bold" android:textSize="13dp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1"
                            android:layout_marginBottom="4dp">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:gravity="center"
                                android:layout_marginStart="-2dp">
                            <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/ic_event_available_black_24dp"
                                    android:id="@+id/imageView2" tools:ignore="VectorDrawableCompat"
                            />
                            <TextView
                                    android:text="Status"
                                    android:textColor="?attr/textcolor"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/textView2"
                                    android:layout_weight="1" android:layout_marginStart="4dp" android:textSize="13dp"/>
                        </LinearLayout>
                        <TextView
                                android:id="@+id/txt_status"
                                android:textColor="?attr/textcolor"
                                android:fontFamily="@font/montserrat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Em Aguardo" android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>