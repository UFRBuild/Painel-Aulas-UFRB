<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="?attr/cardbackground"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_developer"
                        android:layout_width="50dp"
                        android:layout_height="55dp"
                        tools:background="?attr/backgroundcolor"
                        android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>

        <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="?attr/divider_item_color" android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/linearLayout2"
                        tools:layout_editor_absoluteX="8dp"
                        tools:ignore="MissingConstraints" android:layout_marginTop="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayout" android:layout_marginBottom="8dp"
                        android:layout_marginStart="8dp">
                    <TextView
                            android:id="@+id/tv_developer_name"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:fontFamily="@font/montserrat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Marcos Bomfim"
                            android:textStyle="bold" android:layout_marginTop="4dp" android:maxLength="130"
                            android:layout_marginEnd="16dp" android:textColor="?attr/item_disciplineTitle"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Github"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/tv_developer_github"
                                android:layout_weight="1"/>
                        <TextView
                                android:text="Instagram"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/tv_developer_instagram"
                                android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>