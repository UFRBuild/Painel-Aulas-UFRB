<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?attr/cardbackground"
            app:cardUseCompatPadding="true">android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout6"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout5" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="center">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="27dp"
                        tools:ignore="MissingConstraints"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteY="49dp" android:id="@+id/linearLayout" android:padding="4dp"
                        android:layout_margin="8dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1"
                    >
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:layout_weight="1"
                        >
                            <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/ic_timer_black_24dp"
                                    tools:ignore="VectorDrawableCompat" android:adjustViewBounds="true"/>
                            <TextView
                                    android:text="Sala"
                                    android:textColor="?attr/textcolor"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" android:layout_marginStart="4dp" android:textSize="14sp"/>
                        </LinearLayout>
                        <TextView
                                android:text="PA2 - 106"
                                android:textColor="?attr/textcolor"
                                android:fontFamily="@font/montserrat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/txt_duration"
                                android:layout_weight="1"
                                android:textStyle="bold" android:textSize="14sp"
                                android:background="@drawable/bg_class_number" android:padding="4dp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1"
                            android:gravity="right">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:gravity="center"
                                android:layout_marginStart="-2dp">
                            <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/ic_hourglass_empty_black_24dp"
                                    android:id="@+id/imageView2" tools:ignore="VectorDrawableCompat"
                            />
                            <TextView
                                    android:text="Início"
                                    android:textColor="?attr/textcolor"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/textView2"
                                    android:layout_weight="1" android:layout_marginStart="4dp" android:textSize="14sp"/>
                        </LinearLayout>
                        <TextView
                                android:id="@+id/txt_status"
                                android:textColor="?attr/textcolor"
                                android:fontFamily="@font/montserrat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10h:00" android:textStyle="bold"
                                android:background="@drawable/bg_class_number" android:textSize="14sp"
                                android:padding="4dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="right" android:id="@+id/linearLayout3"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent">

                <TextView
                        android:text="Cálculo Diferêncial e Integral 5 "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/tv_matter" android:layout_weight="2"
                        android:paddingLeft="4dp" android:textStyle="bold" android:textSize="14sp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_close_black_24dp"
                        android:id="@+id/imageView3"
                        android:layout_alignParentRight="true"
                        tools:ignore="VectorDrawableCompat" android:layout_marginEnd="4dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3" android:layout_margin="8dp"
                    tools:layout_editor_absoluteX="8dp"
                    android:id="@+id/linearLayout5"
                    tools:ignore="MissingConstraints">
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp" android:id="@+id/view"
                        android:background="@drawable/bg_class_number"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                >
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                >
                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_supervisor_account_black_24dp"
                            android:id="@+id/imageView5" android:layout_weight="1" tools:ignore="VectorDrawableCompat"/>
                    <TextView
                            android:text="Professor Aritanaelton Alexander"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/tv_prof"
                            android:layout_weight="2"
                            android:paddingLeft="4dp"/>
                </LinearLayout>


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                >
                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_event_available_black_24dp"
                            android:id="@+id/imageView6" android:layout_weight="1" tools:ignore="VectorDrawableCompat"/>
                    <TextView
                            android:text="Em Aguardo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/tv_status" android:layout_weight="2"
                            android:paddingLeft="4dp"/>
                </LinearLayout>


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                >
                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_timer_black_24dp"
                            android:id="@+id/imageView7" android:layout_weight="1" tools:ignore="VectorDrawableCompat"/>
                    <TextView
                            android:text="2h:00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/tv_duration"
                            android:layout_weight="2"
                            android:paddingLeft="4dp"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="8dp" tools:ignore="MissingConstraints" android:id="@+id/linearLayout7"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

                <Button
                        android:text="Atualizar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button3"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>