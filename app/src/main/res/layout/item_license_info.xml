<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="8dp">
        <TextView
                android:text="toybox"
                android:layout_width="wrap_content"
                android:textColor="?attr/item_disciplineTitle"
                android:layout_height="wrap_content" android:id="@+id/license_title"
                tools:layout_editor_absoluteX="40dp" android:textStyle="bold" android:textSize="16sp"/>
        <TextView
                android:text="Toybox: all-in-one Linux command line . (0 BSD)"
                android:layout_width="match_parent"
                android:textColor="?attr/textcolor"
                android:layout_height="wrap_content" android:id="@+id/license_description"/>
    </LinearLayout>
</LinearLayout>