<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="?attr/cardbackground"
        app:cardUseCompatPadding="true" android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" android:id="@+id/view_color_status"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="8dp">

                    <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="16dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/montserrat"
                            android:maxLength="130"
                            android:maxLines="2"
                            android:textColor="?attr/item_disciplineTitle"
                            android:textStyle="bold"
                            tools:text="GCET000 - Calculo Integral e Difrencial I " />

                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/pavilion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/title"
                                android:ellipsize="end"
                                android:fontFamily="@font/montserrat"
                                android:maxLength="32"
                                android:maxLines="1"
                                android:textColor="?attr/textcolor"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:text="Eterfano Alexsander do Calabá da Monta" />

                        <TextView
                                android:id="@+id/txtmonitoria"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_gravity="center"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_monitoring"
                                android:gravity="left"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:text="Monitoria"
                                android:textAlignment="center"
                                android:textColor="?attr/class_text_color"
                                app:layout_constraintEnd_toEndOf="parent" />
                    </android.support.constraint.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="4dp"
                            android:background="?attr/divider_item_color" />
                </LinearLayout>


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="27dp"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteY="49dp" android:id="@+id/linearLayout">

                    <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:orientation="horizontal">

                                <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="match_parent"
                                        app:srcCompat="@drawable/ic_forum_black_24dp"
                                        tools:ignore="VectorDrawableCompat" />

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="4dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/montserrat"
                                        android:text="Sala  "
                                        android:textColor="?attr/textcolor"
                                        android:textSize="13dp" />
                            </LinearLayout>

                            <TextView
                                    android:id="@+id/sala"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:background="@drawable/bg_class_number"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/montserrat"
                                    android:gravity="top|center"
                                    android:maxLength="9"
                                    android:maxLines="2"
                                    android:padding="4dp"
                                    android:text="PA2 - 106    "
                                    android:textColor="?attr/class_text_color"
                                    android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                            <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/ic_timer_black_24dp"
                                    tools:ignore="VectorDrawableCompat" />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/montserrat"
                                    android:text="Duração"
                                    android:textColor="?attr/textcolor"
                                    android:textSize="13dp" />
                        </LinearLayout>

                        <TextView
                                android:id="@+id/txt_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_class_room_duration"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:paddingStart="8dp"
                                android:paddingLeft="8dp"
                                android:paddingEnd="8dp"
                                android:paddingRight="8dp"
                                android:text="2h:00"
                                android:textColor="?attr/class_text_color"
                                android:textSize="13dp"
                                android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1"
                            android:layout_marginBottom="4dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                            <ImageView
                                    android:id="@+id/imageView2"
                                    android:layout_width="16dp"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/ic_event_available_black_24dp"
                                    tools:ignore="VectorDrawableCompat" />

                            <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/montserrat"
                                    android:text="Início"
                                    android:textColor="?attr/textcolor"
                                    android:textSize="13dp" />

                        </LinearLayout>

                        <TextView
                                android:id="@+id/txt_timer_start"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginBottom="4dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_class_room_start_time"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:paddingStart="8dp"
                                android:paddingLeft="8dp"
                                android:paddingEnd="8dp"
                                android:text="10h:00"
                                android:textColor="?attr/class_text_color"
                                android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>